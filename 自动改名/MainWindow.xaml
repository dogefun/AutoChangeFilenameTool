        <Grid.RowDefinitions>
            <RowDefinition Height="183*"/>
            <RowDefinition Height="136*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>

        <Image x:Name="image" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="-18,-26,0,-297" VerticalAlignment="Top" Source="bg.jpg" Opacity="0.3" Grid.RowSpan="2"/>

